<div class="container-fluid mt-2" id="profile">
    <div class="row justify-content-center mb-2" id="profile-email">

        <div class="col-lg-3 col-auto font-weight-bold text-right">
            <span class="text-center"> Email: </span>
        </div>

        <div class="col-lg-4 col-auto">
            <span> {{ currentUser.email }}</span>
        </div>
    </div>

    <div class="row justify-content-center mb-3" id="profile-first">

        <div class="col-lg-3 col-auto font-weight-bold text-right">
            <span class="text-center"> Name: </span>
        </div>

        <div class="col-lg-4 col-auto">
            <span class="text-center"> {{ currentUser.fullName }}</span>

        </div>
    </div>


</div>

<form method="post", action="/users/myaccount">
    <div class="container-fluid">
        <div class="form-group row justify-content-center mb-0">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="password">Current Password: </label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="password" type="password" name="password" required/><br/>
            </div>
        </div>


        <div class="form-group row justify-content-center mb-0">
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4 text-left font-weight-bold">
                <label class="col-form-label" for="password">New Password: </label>
            </div>
            <div class="col-1 col-md-3"></div>
            <div class="col-9 col-md-4">
                <input class="form-control" id="password" type="password" name="newPassword" required/><br/>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="p-2 col-3 col-md-1" type="submit" value="Submit"/>
        </div>

    </div>
</form>