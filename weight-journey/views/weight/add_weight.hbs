<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-8">
                    <img src="/assets/images/weight-loss.jpg" alt="Weight Loss" class="image mt-1" id="addPageImg">
        </div>
    </div>
</div>

<form method="post" , action="/weight/save">
    <div class="container-fluid">
        <input type="hidden" name="saveMethod"
               value="{{#if isCreate}}create{{else}}update{{/if}}"/>

        <div class="form-group row justify-content-center">
            <input type="hidden" name="weightId" value="{{ weightId }}"/>
        </div>

        <div class="form-group row mt-3">
            <div class="col-auto text-right font-weight-bold" id="labels">
                <label class="col-form-label" for="date">Date: </label>
            </div>

            <div class="col-auto">
                <input class="form-control" type="date" name="date" id="dateInput" required/><br/>
            </div>
        </div>


        <div class="form-group row">

        <div class="col-auto text-right font-weight-bold" id="labels">
                <label class="col-form-label" for="pounds">Weight: </label>
            </div>

            <div class="col-4">
                <input class="form-control" type="number" step="0.01" name="pounds" min="1" required/> <br/>

            </div>

            <div>
                <label class="col-form-label" for="pounds">lbs.</label>
            </div>
        </div>

        <div class="form-group row mt-3">

            <div class="col-auto text-right font-weight-bold" id="labels">

            <label class="col-form-label" for="body">Diary Entry: </label>
            </div>
            <div class="col-9">
                <textarea class="col-10 form-control" rows=4 name="body"></textarea>

            </div>
        </div>

        <div class="form-group row justify-content-center">
            <input class="col-auto" type="submit" value="Submit"/>

        </div>

    </div>
</form>


<script>
    document.querySelector('#dateInput').max = new Date().toISOString().substring(0,10)
</script>
