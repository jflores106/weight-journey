<div class="container-fluid m-2">
    {{> user_messages}}
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-9 col-lg-5">
            <img src="/assets/images/heart.jpg" alt="Weight Loss" class="image mt-1" id="viewPageImg">
        </div>
    </div>

    <div class="row justify-content-center mt-2">
        <h3>{{ weightDate }}</h3>
    </div>

    <div class="row justify-content-center mb-1">
        <div class="font-weight-bold col-auto"> Weight:</div>
        <div class="col-auto"> {{ weightPounds }} lbs.</div>
    </div>

    <div class="row mb-1">
        <div class="col-lg-1 col-sm-1"></div>
        <div class="font-weight-bold col-lg-1 col-sm-2 col-3 text-right"> Diary Entry:</div>
        <div class="col-lg-9 col-sm-8 col-8"> {{ weightBody }}</div>
    </div>

    <hr/>
    <div class="row justify-content-center">
        <span class="mr-2"><a href="/weight/destroy?id={{ weightId }}"><i data-feather="trash-2"></i> </a></span>
        <span><a href="/weight/edit?id={{ weightId }}"><i data-feather="edit"></i></a></span>
    </div>
</div>